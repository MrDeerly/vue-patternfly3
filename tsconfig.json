{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "dist/types",
    "types": [
      "vite/client"
    ],
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "es2020",
      "dom",
      "dom.iterable"
    ],
    "target": "es2020",
    "module": "es2020",
    "declaration": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "strict": true,
    "strictNullChecks": false,
    "allowJs": true,
    "useDefineForClassFields": true,
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ]
}
